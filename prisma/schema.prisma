generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String  @id @unique @default(cuid())
  name        String
  description String?

  @@map("courses")
}

model Topic {
  id          String    @id @unique @default(cuid())
  title       String
  slug        TopicSlug @relation(fields: [slugId], references: [id])
  slugId      String    @unique
  dateCreated DateTime  @default(now())
  dateUpdated DateTime  @updatedAt

  @@index([id])
  @@map("topics")
}

model TopicSlug {
  id          String   @id @unique @default(cuid())
  raw         Json     @default("{ \"type\": \"doc\", \"content\": [] }")
  slug        String
  meta        Topic?
  dateCreated DateTime @default(now())
  dateUpdated DateTime @updatedAt

  @@index([id])
  @@map("topic_slugs")
}
